    "components": {
        "schemas": {
            "SignupRequest": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "User's name",
                        "example": "User"
                    },
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email",
                        "example": "example@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password",
                        "example": "qwerty123"
                    }
                }
            },
            "SignupResponse": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "User's name",
                        "example": "User"
                    },
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email",
                        "example": "example@gmail.com"
                    }
                }
            },
            "SigninRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "example": "example@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password",
                        "example": "qwerty123"
                    }
                }
            },
            "SigninResponse": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "User's name",
                                "example": "User"
                            },
                            "email": {
                                "type": "string",
                                "description": "User's email",
                                "format": "email",
                                "example": "example@gmail.com"
                            }
                        }
                    },
                    "token": {
                        "type": "string",
                        "description": "Session's access token (needed for all requests)",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1aWQiOiI1ZmMyMDg1YmQwOTM2NTI4MTA3Y2UyNzQiLCJzaWQiOiI1ZmMyZDJmY2UxZDIwNTA2NzAyYmRkMjIiLCJpYXQiOjE2MDY2MDM1MTYsImV4cCI6MTYwNjYwNzExNn0.rJ_QjU4KvA76H96RHsvOBChK0Vjbd0NmqjMxdQVJIXA"
                    }
                }
            },
            "AddBookRequest": {
                "required": [
                    "title",
                    "author",
                    "year",
                    "totalPages",
                    "readPages"
                ],
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Book's title",
                        "example": "Harry Potter"
                    },
                    "author": {
                        "type": "string",
                        "description": "Book's author",
                        "example": "J. K. Rowling"
                    },
                    "year": {
                        "type": "number",
                        "description": "Book's year",
                        "example": "1997"
                    },
                    "totalPages": {
                        "type": "number",
                        "description": "Book's total amount of pages",
                        "example": "123"
                    },
                    "readPages": {
                        "type": "number",
                        "description": "Book's number of pages read"
                    }
                }
            },
            "AddBookResponse": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string",
                        "description": "Book's id",
                        "example": "07ef3f4358b773378699381"
                    },
                    "title": {
                        "type": "string",
                        "description": "Book's title",
                        "example": "Harry Potter"
                    },
                    "author": {
                        "type": "string",
                        "description": "Book's author",
                        "example": "J. K. Rowling"
                    },
                    "year": {
                        "type": "number",
                        "description": "Book's year",
                        "example": "1997"
                    },
                    "totalPages": {
                        "type": "number",
                        "description": "Book's total amount of pages",
                        "example": "123"
                    },
                    "readPages": {
                        "type": "number",
                        "description": "Book's number of pages read"
                    },
                    "rating": {
                        "type": "string",
                        "description": "rating",
                        "example": "1"
                    },
                    "status": {
                        "type": "string",
                        "description": "Book's status",
                        "example": "plan"
                    }
                }
            },
            "GetBooks": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "_id": {
                            "type": "string",
                            "description": "Book's id",
                            "example": "07ef3f4358b773378699381"
                        },
                        "title": {
                            "type": "string",
                            "description": "Book's title",
                            "example": "Harry Porter"
                        },
                        "author": {
                            "type": "string",
                            "description": "Book's author",
                            "example": "J. K. Rowling"
                        },
                        "year": {
                            "type": "number",
                            "description": "Book's year",
                            "example": "1997"
                        },
                        "totalPages": {
                            "type": "number",
                            "description": "Number of pages in a book",
                            "example": "123"
                        },
                        "resume": {
                            "type": "string",
                            "description": "resume",
                            "example": ""
                        },
                        "rating": {
                            "type": "string",
                            "description": "rating",
                            "example": "5"
                        },
                        "user": {
                            "type": "string",
                            "description": "User's id",
                            "example": "07ef3f4351654684862d2dg9381"
                        }
                    }
                }
            },
            "UpdateBookRequest": {
                "required": [],
                "type": "object",
                "properties": {
                    "resume": {
                        "type": "string",
                        "description": "Book's review",
                        "example": "It's a great book"
                    },
                    "rating": {
                        "type": "string",
                        "description": "Book's rating",
                        "example": "5"
                    }
                }
            },
            "UpdateBookResponse": {
                "required": [],
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string",
                        "description": "Book's id",
                        "example": "07ef3f4358b773378699381"
                    },
                    "title": {
                        "type": "string",
                        "description": "Book's title",
                        "example": "Harry Potter"
                    },
                    "author": {
                        "type": "string",
                        "description": "Book's author",
                        "example": "J. K. Rowling"
                    },
                    "year": {
                        "type": "number",
                        "description": "Book's year",
                        "example": "1997"
                    },
                    "totalPages": {
                        "type": "number",
                        "description": "Book's total amount of pages",
                        "example": "123"
                    },
                    "readPages": {
                        "type": "number",
                        "description": "Book's number of pages read"
                    },
                    "rating": {
                        "type": "string",
                        "description": "rating",
                        "example": "1"
                    },
                    "resume": {
                        "type": "string",
                        "description": "Book's review",
                        "example": "It's a great book"
                    },
                    "status": {
                        "type": "string",
                        "description": "Book's status",
                        "example": "done"
                    }
                }
            },
            "RemoveBook": {
                "type": "object",
                "description": "delete",
                "example": {
                    "message": "Success delete"
                }
            },
            "StartPlanningRequest": {
                "type": "object",
                "required": [
                    "startDate",
                    "endDate",
                    "books"
                ],
                "properties": {
                    "startDate": {
                        "type": "string",
                        "description": "start date training",
                        "example": "2022.05.10"
                    },
                    "endDate": {
                        "type": "string",
                        "description": "end date training",
                        "example": "2022.06.10"
                    },
                    "books": {
                        "type": "array",
                        "example": []
                    }
                }
            },
            "StartPlanningResponse": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string",
                        "description": "planning id",
                        "example": "6081759c95df4f709eb06438"
                    },
                    "startDate": {
                        "type": "string",
                        "example": "2022.05.10",
                        "description": "start date planning"
                    },
                    "endDate": {
                        "type": "string",
                        "example": "2022.05.10",
                        "description": "end date planning"
                    },
                    "duration": {
                        "type": "integer",
                        "description": "duration",
                        "example": 3
                    },
                    "books": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "Book's id",
                                    "example": "07ef3f4358b773378699381"
                                },
                                "title": {
                                    "type": "string",
                                    "description": "Book's title",
                                    "example": "Harry Porter"
                                },
                                "author": {
                                    "type": "string",
                                    "description": "Book's author",
                                    "example": "J. K. Rowling"
                                },
                                "year": {
                                    "type": "number",
                                    "description": "Book's year",
                                    "example": "1997"
                                },
                                "totalPages": {
                                    "type": "number",
                                    "description": "Number of pages in a book",
                                    "example": "123"
                                },
                                "resume": {
                                    "type": "string",
                                    "description": "resume",
                                    "example": ""
                                },
                                "rating": {
                                    "type": "string",
                                    "description": "rating",
                                    "example": "5"
                                }
                            }
                        }
                    },
                    "pagesReadPerDay": {
                        "type": "number",
                        "description": "number of pages read per day",
                        "example": "15"
                    },
                    "results": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "date": {
                                    "type": "string",
                                    "description": "The date",
                                    "example": "15"
                                },
                                "pagesCount": {
                                    "type": "number",
                                    "description": "The number of pages",
                                    "example": "25"
                                }
                            }
                        }
                    }
                }
            },
            "ReadPagesRequest": {
                "required": [
                    "date",
                    "pages"
                ],
                "type": "object",
                "properties": {
                    "date": {
                        "type": "string",
                        "description": "the date",
                        "example": "2022.05.10"
                    },
                    "pages": {
                        "type": "number",
                        "description": "read pages",
                        "example": "15"
                    }
                }
            },
            "ReadPagesResponse": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string",
                        "description": "planning period id",
                        "example": "608185d3797104748da4ce35"
                    },
                    "date": {
                        "type": "string",
                        "description": "planning period date",
                        "example": "2022.05.10"
                    },
                    "pageCount": {
                        "type": "number",
                        "description": "number of pages read ",
                        "example": "15"
                    }
                }
            },
